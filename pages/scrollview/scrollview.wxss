.swiper{
  width: 100%;
  height: 300px;
  margin: 0 auto;
}
.image{
    width: 100%;
    height: 100%;
  }
.scale-image{
  width: inherit;
  height: inherit;
}
.controls {
  position: relative;
  /* top: 20px; */
  height: 50px;
  /* margin-top: -25px; */
  display: flex;
}
.play,.pause,.time {
  flex: 1;
  height: 100%;
}
.time {
  text-align: top;
  background-color: rgba(0, 0, 0, .5);
  color: white;
  /* line-height: 50px; */
}
.img {
  width: 40px;
  height: 40px;
  margin: 5px auto;
}